<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Formulario_CV.Vistas.Idiomas">
    <StackLayout>
        <Label Text="Idiomas:"
               FontSize="30" />
        <Entry Placeholder="Escribe tus idiomas aqui"
               x:Name="idiomasx" />
        <Button Text="Siguiente"
                BackgroundColor="#80AEFF"
                FontSize="25"
                x:Name="btncompletado"
                Clicked="btncompletado_Clicked" />
    </StackLayout>
</ContentPage>